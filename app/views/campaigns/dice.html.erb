<div class = "dice-page-container">
  <div class = "dice-container">
    <div class="dice-roller" data-controller="dice-roller">
      <div class="dice-block form-block">
        <div class="form-row">
          <div class="form-column">
            <h2 class="form-label">To Hit Bonus</h2>
            <input id="to-hit-bonus" type="number" value="0" data-dice-roller-target="toHitBonus" class="form-input">
          </div>
        </div>


        <div class="form-row">
          <div class="form-column">
            <h2 class="form-label">Damage Dice Type (d)</h2>
            <input id="damage-dice" type="number" value="20" data-dice-roller-target="damageDice">
          </div>
        </div>


        <div class="form-row">
          <div class="form-column">
            <h2 class="form-label">Damage Dice Count</h2>
            <input id="damage-dice-count" type="number" value="1" data-dice-roller-target="damageCount" class="form-input">
          </div>

          <div class="form-column">
            <h2 class="form-label">Damage Bonus</h2>
            <input id="damage-bonus" type="number" value="0" data-dice-roller-target="damageBonus" class="form-input">
          </div>
        </div>

        <div class="form-row">
          <div class="form-column">
            <h2 class="form-label">Number of Attacks</h2>
            <input id="attack-count" type="number" value="1" data-dice-roller-target="numAttack" class="form-input">
          </div>
        </div>

        <div class="form-separator"></div>

        <div class="form-row">
          <button class="dice-button" data-action="click->dice-roller#rollAll">Roll!</button>
          <button class="dice-button" data-action="click->dice-roller#spacer">Spacer</button>
          <button class="dice-button" data-action="click->dice-roller#clearLog">Clear Log</button>
          <button class="dice-button" data-action="click->dice-roller#load" id="undoClear" style="display: none;">Undo Clear</button>
        </div>
      </div>

      <div class="dice-block log-block">
        <div id="log" data-dice-roller-target="log"></div>

      </div>

    </div>

  </div>

  <div class="back-button-container">
    <%= link_to "Back", campaign_path(@campaign), class: 'home-button' %>
  </div>
</div>
