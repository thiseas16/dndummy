<div class="character-show">
  <h1 class="character-main-title"><%= @character.name %></h1>
  <div class="character-main-container">
    <div class="first-info">
      <div class="character-image">
        <%= cl_image_tag @character.photo.key, fetch_format: :auto, crop: :fill if @character.photo.attached? %>
      </div>
      <div class="basic-info">
        <div class="info-header">
          <h2 class="text-center">Basic Information</h2>
        </div>
        <div class="card-body">
          <p><strong>Name:</strong> <%= @character.name %></p>
          <p><strong>Class:</strong> <%= @character.class_list %></p>
          <p><strong>Race:</strong> <%= @character.race %></p>
          <p><strong>Alignment:</strong> <%= @character.alignment %></p>
          <p><strong>Level:</strong> <%= @character.level %></p>
          <p><strong>Experience:</strong> <%= @character.exp %></p>
          <p><strong>Initiative:</strong> <%= @character.inititiave %></p>
          <p><strong>Armor Class:</strong> <%= @character.armor_class %></p>
          <p><strong>Speed:</strong> <%= @character.speed %></p>
          <p><strong>Total HP:</strong> <%= @character.total_hp %></p>
          <p><strong>Current HP:</strong> <%= @character.current_hp %></p>
          <p><strong>Temp HP:</strong> <%= @character.temp_hp %></p>
        </div>
      </div>
    </div>

    <div class="second-info">
      <div class="first-part">
        <div class="information-card">
          <div class="info-header">
            <h2 class="text-center">Appearance</h2>
          </div>
          <div class="card-body">
            <p><strong>Age:</strong> <%= @character.age %></p>
            <p><strong>Height:</strong> <%= @character.height %></p>
            <p><strong>Weight:</strong> <%= @character.weight %></p>
            <p><strong>Eyes:</strong> <%= @character.eyes %></p>
            <p><strong>Skin:</strong> <%= @character.skin %></p>
            <p><strong>Hair:</strong> <%= @character.hair %></p>
          </div>
        </div>
      </div>
      <div class="first-part">
        <div class="information-card">
          <div class="info-header">
            <h2 class="text-center">Stats</h2>
          </div>
          <div class="card-body">
            <p><strong>Strength:</strong> <%= @character.str %></p>
            <p><strong>Dexterity:</strong> <%= @character.dex %></p>
            <p><strong>Constitution:</strong> <%= @character.const %></p>
            <p><strong>Intelligence:</strong> <%= @character.int %></p>
            <p><strong>Wisdom:</strong> <%= @character.wis %></p>
            <p><strong>Charisma:</strong> <%= @character.cha %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="third-info">
      <div class="information-card">
        <div class="info-header">
          <h2 class="text-center">Other Details</h2>
        </div>
        <div class="card-body">
          <p><strong>Flaws:</strong> <%= @character.flaws %></p>
          <p><strong>Bonds:</strong> <%= @character.bonds %></p>
          <p><strong>Ideals:</strong> <%= @character.ideals %></p>
          <p><strong>Traits:</strong> <%= @character.personality_traits %></p>
          <p><strong>Backstory:</strong> <%= @character.backstory %></p>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'All Characters',  campaign_characters_path(@campaign), class: "home-button" %>
  <%= link_to 'Create a new character', new_campaign_character_path(@campaign), class: "home-button" %>
  <%= link_to 'Random Character',  new_campaign_random_character_path, class: "home-button" %>
</div>
