<div class="columns-container-spells-index">
  <div class = "columns row">
    <div class="column col-2">NAME</div>
    <div class="column col-2">LEVEL</div>
    <div class="column col-2">CASTING TIME</div>
    <div class="column col-2">DURATION</div>
    <div class="column col-2">RANGE</div>
    <div class="column col-2">DAMAGE TYPE</div>
  </div>
  <div class="empty-block">
    HI!
  </div>
</div>
<div class="accordion spells-index" id="accordionExample">
  <% @spells.each_with_index do |spell, index| %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%=index%>">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=index%>" aria-expanded="true" aria-controls="collapse<%=index%>">
          <div class="row" style="width: 100%; text-align: center;">
            <div class="col-2 spell-field">
              <%= spell.name %>
            </div>
            <div class="col-2 spell-field">
              <%= spell.lvl %>
            </div>
            <div class="col-2 spell-field">
              <%= spell.casting_time %>
            </div>
            <div class="col-2 spell-field">
              <%= spell.duration %>
            </div>
            <div class="col-2 spell-field">
              <%= spell.range %>
            </div>
            <div class="col-2 spell-field">
              <%= spell.dmg_type %>
            </div>
          </div>
        </button>
      </h2>
      <div id="collapse<%=index%>" class="accordion-collapse collapse" aria-labelledby="heading<%=index%>" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <p><%= spell.description %></p>
          <div class="btn btn-info">
            <%= link_to 'READ MORE', spells_show_path(spell) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @spells , previous_label: ''%>
